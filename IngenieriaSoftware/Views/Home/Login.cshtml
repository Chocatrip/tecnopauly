@model IngenieriaSoftware.Models.LoginModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="card">
    <div class="card-title">
        <h2>Ingrese su cuenta</h2>
    </div>
    <form asp-controller="Login"
          asp-action="LoginControl"
          method="post"
          role="form"
          id="login-form"
          onkeydown="pnPreventSubmitOnEnter(event)"
          data-ajax="true">

        <label class="mr-2 col-12">
            Usuario
        </label><input asp-for="user" />

        <label class="mr-2 col-12">
            Contraseña
        </label><input asp-for="password" />
        <button id="login-btn"
                style="width:700px"
                class="btn btn-primary btn-sm ml-4 col-12"
                type="submit"
                title="Login">
            Ingresar
        </button>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Ingresar/ingresar.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>