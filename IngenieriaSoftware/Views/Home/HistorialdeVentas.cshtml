@model IngenieriaSoftware.Controllers.HomeController.HistorialdeVentasModelWrapper
@{ ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }


<script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.23/b-1.6.5/fc-3.3.2/sc-2.0.3/sb-1.0.1/sp-1.2.2/sl-1.3.1/datatables.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/TablaProductos/editar-producto.js"></script>
<style>
    #tablaVentas_filter{
        display:flex;
        justify-content: flex-end;
    }
</style>
<div class="table_section">

    <div class="table_top">
        <div class="container-fluid">
            <div class="table_top_letter">
                <div class="">
                    <h5 class="">Historial de ventas</h5>
                </div>

                <div class="inventual-breadcrumb-area-inner-wrap">
                    <span class="text-14 text-gray font-normal inline-block mr-2">Home</span>
                    <span class="text-14 text-gray font-normal inline-block mr-2">&gt;</span>
                    <span class="text-14 text-gray font-normal inline-block mr-2">Historial de Ventas</span>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <!--COMIENZO DE LA TABLA DE PRODUCTOS-->
    <div class="table_top">
        <div class="container-fluid">
            <div class="table_top_letter2">
                <div class="">
                    <div class="">

                        <div class="container-btn">
                            <span matripple="" class="mat-ripple mat-button-ripple"></span>
                            <span class="mat-button-focus-overlay"></span>
                            </button>
                        </div>

                        <div>
                            <table id="tablaVentas" class="table table-sm table_section">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>ID Venta</th>
                                        <th>Productos</th>
                                        <th>Total</th>
                                        <th>Fecha ingreso venta</th>
                                        <th>Fecha venta</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- aca se inicia el for para recorrer datos -->
                                    @for(int i = 0; i < Model.ventasHistorial.Length; i++)
                                    {
                                       <tr>
                                            <td>@(i+1)</td>
                                            <td>@Model.ventasHistorial[i].idVenta</td>
                                            <td>@Model.ventasHistorial[i].productos</td>
                                            <td>$@Model.ventasHistorial[i].Total</td>
                                            <td>@Model.ventasHistorial[i].fechaIngreso</td>
                                            <td>@Model.ventasHistorial[i].fechaVenta</td>
                                     </tr> 
                                    }
                                        
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
window.addEventListener('load', function() {
    var x = document.getElementById("tablaVentas_filter");
    var search = x.innerHTML;
    console.log(search);
    search = search.replace(/(>)(Search:)(<)/g,"$1Buscar:$3");
    x.innerHTML = search;
    x = document.getElementById("tablaVentas_length");
    var mostrar = x.innerHTML;
    mostrar = mostrar.replace(/(>)(Show )(<)/g, "$1Mostrar $3");
    mostrar = mostrar.replace(/(>)( entries)(<)/g, "$1 entradas$3");
    x.innerHTML = mostrar;
    x = document.getElementById("tablaVentas_info")
    var mostrando = x.innerHTML
    mostrando = mostrando.replace(/()(Showing)()/g,"$1Mostrando$3");
    mostrando = mostrando.replace(/()(to)()/g,"$1a$3");
    mostrando = mostrando.replace(/()(of)()/g,"$1de$3");
    mostrando = mostrando.replace(/()(entries)()/g,"$1entradas$3");
    x.innerHTML = mostrando;
    x = document.getElementById("tablaVentas_previous")
    x.innerHTML = x.innerHTML.replace(/()(Previous)()/g,"$1Anterior$3")
    x = document.getElementById("tablaVentas_next")
    x.innerHTML = x.innerHTML.replace(/()(Next)()/g,"$1Siguiente$3")
})
</script>


