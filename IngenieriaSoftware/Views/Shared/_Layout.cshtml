@{ }


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <link rel="icon" href="@Url.Content("images/fevicon.png")" type="image/gif" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- bootstrap core css -->
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/bootstrap.css")" />
    <script src="@Url.Content("~/lib/jquery/jquery.min.js")"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src=@Url.Content("~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js")></script>
    <script src=@Url.Content("~/lib/jquery-validate/jquery.validate.js")></script>
    <script src=@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")></script>
    
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/TablaProductos/eliminar-producto.js"></script>
    <script src="@Url.Content("~/js/Ingresar/ingresar.js")"></script>
    <script src="@Url.Content("~/js/InicioSesion/IniciarSesion.js")"></script>
    <script src="@Url.Content("~/js/InicioSesion/Registrar.js")"></script>

    <!-- fonts style -->
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap")" rel="stylesheet"> <!-- range slider -->
    <!-- font awesome style -->
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/style2.css")" rel="stylesheet" />
    <link href="@Url.Content("~/js/script2.js")" rel="stylesheet" />

    <!-- responsive style -->
    <link href="@Url.Content("~/css/responsive.css")" rel="stylesheet" />

    <title>@ViewData["Title"] - TECNOPAULY</title>


</head>
<body style="margin-bottom: 0">
    <script src="~/js/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>

    <div class="hero_area">

        <!-- END HEADER -->
        <header class="header_section">
            <div class="header_top">
                <div class="container-fluid">
                    <div class="top_nav_container">
                        <div class="contact_nav">
                            <a href="https://api.whatsapp.com/send?phone=56940371752">
                                <i style="height: 10px" class="fa fa-phone" aria-hidden="true"></i>
                                <span style="font-size: 15px">
                                    Celular : +569 40371752
                                </span>
                            </a>
                            <a href="">
                                <i style="height: 10px" class="fa fa-envelope" aria-hidden="true"></i>
                                <span style="font-size: 15px">
                                    Email : tecnopauly@gmail.com
                                </span>
                            </a>
                        </div>
                        <from class="search_form">
                            <input type="text" class="form-control" placeholder="Buscar un producto...">
                            <button class="" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </from>
                        <div class="user_option_box">
                            <a class="account-link" asp-area="" asp-controller="Home" asp-action="Cuenta">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <span>
                                    Mi Cuenta
                                </span>
                            </a>
                            <a class="cart-link" asp-area="" asp-controller="Home" asp-action="Carrito">
                                <i class="fa fa-shopping-cart"></i>
                                <span>
                                    Carrito
                                </span>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container ">
                        <a class="navbar-brand" href="/">
                            <span>
                                <!--LOGO TECNOPAULY-->
                                <img src="~/images/planetapauly.gif" height="65px"><img src="~/images/tecnopaulyletras.png" height="65px">
                            </span>
                        </a>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""> </span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ">
                                <li class="nav-item active">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Productos">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacto">Contacto</a>
                                </li>
                                <li class="nav-item">
                                    <!-- Button trigger modal -->
                                    <a class="nav-link" data-bs-toggle="modal" data-bs-target="#loginModal">
                                        Login
                                    </a>

                                    <!-- Modal -->
                                    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="loginModalLabel">Inicio de Sesión</h5>
                                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true" style="color: #F216CE">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @await Component.InvokeAsync(nameof(LoginModal))
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--MODAL PARA REGISTRO-->
                                    @*<a class="btn btn-primary modal-trigger" type="button" title="Registrar Usuario"
                                            asp-action="Tabla"
                                            data-popup-dialog-title="Registrar" data-popup-dialog-close-button="true" data-popup-dialog-size="Large">
                                            Registrar
                                        </a>*@
                                    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="registerModalLabel">Registro</h5>
                                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true" style="color: #F216CE">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @await Component.InvokeAsync(nameof(RegisterModal))
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--MODAL PARA OLVIDO CONTRASEÑA-->
                                    <div class="modal fade" id="forgotModal" tabindex="-1" aria-labelledby="forgotModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="forgotModalLabel">Olvidaste tu contraseña</h5>
                                                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true" style="color: #F216CE">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">

                                                    <p id="error"></p>
                                                    <form class="px-4 py-3">
                                                        <div class="form-group">
                                                            <label for="email">Correo electrónico</label><br>
                                                            <input class="form-control" id="email" placeholder="email@ejemplo.com">
                                                        </div>
                                                        <center>
                                                            <div class="contt5 container">
                                                                <div class="row align-self-center">
                                                                    <div>
                                                                        <button class="btn btn-primary"
                                                                                id="forgot-btn"
                                                                                type="submit"
                                                                                title="forgot"
                                                                                style="background-color: #BC40B1; border-color: #2E0259">
                                                                            Recuperar contraseña
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="contt4">
                                                                <span id="error" style=""> </span>
                                                            </div>
                                                        </center>
                                                    </form>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" href="#loginModal" data-bs-toggle="modal" data-bs-target="#loginModal">¿Ya tienes una cuenta? Inicia sesión!</a>
                                                    <a class="dropdown-item" href="#registerModal" data-bs-toggle="modal" data-bs-target="#registerModal">¿Eres nuevo? Regístrate!</a>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <!-- END HEADER -->

        @RenderBody()

        <section class="info_section ">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="info_contact">
                            <h5>
                                <a href="" class="navbar-brand">
                                    <span>
                                        <!--LOGO TECNOPAULY FOOTER-->
                                        <img src="~/images/tecnopaulylogo.gif" height="60px">
                                    </span>
                                </a>
                            </h5>
                            <p>
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                +569 40371752
                            </p>
                            <p>
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                tecnopauly@gmail.com
                            </p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="info_info">
                            <h5>
                                Información
                            </h5>
                            <p>
                                TecnoPauly es una tienda de ventas informales que ofrece productos tecnológicos al mejor precio.
                            </p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="info_links">
                            <h5>
                                Links útiles
                            </h5>
                            <ul>
                                <li>
                                    <a href="index.html">
                                        Inicio
                                    </a>
                                </li>
                                <li>
                                    <a href="product.html">
                                        Productos
                                    </a>
                                </li>
                                <li>
                                    <a href="#loginModal" data-bs-toggle="modal" data-bs-target="#loginModal">
                                        Login
                                    </a>
                                </li>
                                <li>
                                    <a href="contact.html">
                                        Contacto
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="info_form ">
                            <h5>
                                Síguenos en nuestra redes sociales
                            </h5>

                            <div class="social_box">
                                <a href="">
                                    <i class="fa fa-facebook" aria-hidden="true"></i>
                                </a>
                                <a href="">
                                    <i class="fa fa-instagram" aria-hidden="true"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- footer section -->
        <footer class="footer_section">
            <div class="container">
                <p>
                    KLADT &copy; <span id="displayYear">2022</span> Todos los derechos reservados
                </p>
            </div>
        </footer>
        <!-- footer section -->
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
