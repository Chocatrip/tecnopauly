@{
}
<div class="ibox-content" style="border-color:white" id="login-tab-form">
    <div class="sk-spinner sk-spinner-cube-grid">
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
    </div>

<form 
asp-controller="Login" 
asp-action="Login"
method="post"
role="form"
id="login-form"
onkeydown="pnPreventSubmitOnEnter(event)"
data-ajax="true"
data-ajax-begin="iniciarSessionbegin()"
data-ajax-success="iniciarSessionsuccess()"
data-ajax-failure="iniciarSessionfailure()"
class="px-4 py-3">
    <div class="form-group">
        <label for="email">Usuario</label><br>
        <input asp-for=user class="form-control" id="email" placeholder="John Doe">
    </div>
    <div class="form-group">
        <label for="password">Contraseña</label>
        <input type=password asp-for=password class="form-control" id="password" placeholder="Contraseña">
    </div>
    <center>
    <div class="contt5 container">
        <div class="row align-self-center">
            <div>
                <button class="btn btn-primary"
                        id="login-btn"
                        type="submit"
                        title="Login"
                        style="background-color: #BC40B1; border-color: #2E0259">
                        Iniciar Sesión
                </button>
            </div>
        </div>
        <div class="contt4">
            <span id="error" style=""> </span>
        </div>
    </div>
    </center>
</form>
<div class="dropdown-divider"></div>
<a class="dropdown-item" href="#registerModal" data-bs-toggle="modal" data-bs-target="#registerModal">¿Eres nuevo? Regístrate!</a>
</div>