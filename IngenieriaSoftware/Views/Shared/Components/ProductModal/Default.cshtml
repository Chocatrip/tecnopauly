@model IngenieriaSoftware.Models.TablaModel

<div class="ibox-content" style="border-color:white" id="ingresar-productos-tab-form">
    <div class="sk-spinner sk-spinner-cube-grid">
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
                                    <div class="sk-cube"></div>
    </div>
    <form class="px-4 py-3"
          onsubmit="return checkform(this)"
          asp-controller="Ingresar"
          asp-action="IngresarProducto"
          method="post"
          role="form"
          id="ingresar-producto-form"
          onkeydown="pnPreventSubmitOnEnter(event)"
          data-ajax="true"
          data-ajax-begin="ingresarbegin()"
          data-ajax-success="ingresarsuccess()"
          data-ajax-failure="ingresarfailure()">
        <script>
            function checkform(form) {
                var inputs = form.getElementsByTagName('input');
                for (var i = 0; i < inputs.length; i++) {
                    if (inputs[i].hasAttribute("required")) {
                        if (inputs[i].value == "") {
                            Swal.fire({
                                customClass: {
                                    container: 'my-swal'
                                },
                                icon: 'warning',
                                title: 'Ha ocurrido un error',
                                text: 'Debe ingresar todos los datos'
                            })
                            return false;
                        }
                    }
                }
                return true;
            }
        </script>
        <div class="form-group">
            <label for="nameProduct">Nombre</label><br>
            <input class="form-control" id="nameProduct" asp-for="NombreProducto" placeholder="Nombre del Producto" required>
        </div>
        <div class="form-group">
            <label for="catProduct">Categoria</label>
            <input class="form-control" id="categoria" asp-for="Categoria" placeholder="Categoria" required>
        </div>
        <div class="form-group">
            <label for="descProduct">Descripci贸n</label>
            <textarea class="form-control" id="descProduct" asp-for="Descripcion" placeholder="Descripci贸n" required></textarea>
        </div>
        <div class="form-group">
            <label for="codProduct">C贸digo producto</label>
            <input class="form-control" id="codProduct" asp-for="Codigo" placeholder="C贸digo producto" required>
        </div>
        <div class="form-group">
            <label for="marcaProduct">Marca</label>
            <input class="form-control" id="marcaProduct" asp-for="Marca" placeholder="Marca producto" required>
        </div>
        <div class="form-group">
            <label for="stockProduct">Stock</label>
            <input type="number" class="form-control" id="stockProduct" asp-for="Stock" placeholder="Stock producto" required>
        </div>
        <div class="form-group">
            <label for="pcProduct">PrecioCosto</label>
            <input class="form-control" type="number" id="pcProduct" asp-for="PrecioCosto" placeholder="Precio costo" required>
        </div>
        <div class="form-group">
            <label for="pvProduct">PrecioVenta</label>
            <input class="form-control" type="number" id="pvProduct" asp-for="PrecioVenta" placeholder="Precio venta" required>
        </div>
        <center>
            <div class="contt5 container">
                <div class="row align-self-center">
                    <div>
                        <button class="btn btn-primary"
                                id="addProduct-btn"
                                type="submit"
                                title="addProduct">
                            Agregar producto
                        </button>
                    </div>
                </div>
            </div>
            <div class="contt4">
                <span id="error" style=""> </span>
            </div>
        </center>
    </form>
</div>