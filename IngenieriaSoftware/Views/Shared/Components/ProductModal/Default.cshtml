@model IngenieriaSoftware.Models.TablaModel

<form class="px-4 py-3"
      asp-controller="Ingresar"
      asp-action="IngresarProducto"
      method="post"
      role="form"
      id="ingresar-producto-form"
      onkeydown="pnPreventSubmitOnEnter(event)"
      data-ajax="true"
      data-ajax-begin="ingresarbegin()"
      data-ajax-success="ingresarsuccess()">
    <div class="form-group">
        <label for="nameProduct">Nombre</label><br>
        <input class="form-control" id="nameProduct" asp-for="NombreProducto" placeholder="Nombre del Producto">
    </div>
    <div class="form-group">
        <label for="catProduct">Categoria</label>
        <input class="form-control" id="categoria" asp-for="Categoria" placeholder="Categoria">
    </div>
    <div class="form-group">
        <label for="descProduct">Descripción</label>
        <textarea class="form-control" id="descProduct" asp-for="Descripcion" placeholder="Descripción"></textarea>
    </div>
    <div class="form-group">
        <label for="codProduct">Código producto</label>
        <input class="form-control" id="codProduct" asp-for="Codigo" placeholder="Código producto">
    </div>
    <div class="form-group">
        <label for="marcaProduct">Marca</label>
        <input class="form-control" id="marcaProduct" asp-for="Marca" placeholder="Marca producto">
    </div>
    <div class="form-group">
        <label for="stockProduct">Stock</label>
        <input type="number" class="form-control" id="stockProduct" asp-for="Stock" placeholder="Stock producto">
    </div>
    <div class="form-group">
        <label for="pcProduct">PrecioCosto</label>
        <input class="form-control" type="number" id="pcProduct" asp-for="PrecioCosto" placeholder="Precio costo">
    </div>
    <div class="form-group">
        <label for="pvProduct">PrecioVenta</label>
        <input class="form-control" type="number" id="pvProduct" asp-for="PrecioVenta" placeholder="Precio venta">
    </div>
    <center>
        <div class="contt5 container">
            <div class="row align-self-center">
                <div>
                    <button class="btn btn-primary"
                            id="addProduct-btn"
                            type="submit"
                            title="addProduct">
                        Agregar producto
                    </button>
                </div>
            </div>
        </div>
        <div class="contt4">
            <span id="error" style=""> </span>
        </div>
    </center>
</form>
